---
import Layout from '../layouts/Layout.astro'
import { books } from '../data/books.js'

const { book } = Astro.params

const info = books.find( b=> b.id === book)

if (!info) {
  return Astro.redirect('/404')
}
---


<Layout title={`${info.title}`}>
    <main class="m-auto max-w-4xl px-4">
        <header class="relative">
            <div>
                <h1 class="scale-75 font-black uppercase text-6xl md:text-8xl text-center py-10"
                style="view-transition-name: book-title;">Libros de <span class="block text-[36px] md:text-[58px]">programacion</span></h1>

            </div>
            <a href="./" type="button" class="absolute top-2/4 left-10 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm p-2.5 text-center inline-flex items-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                <svg class="w-5 h-5 rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                <span class="sr-only"></span>
                </a>
        
              
            
        </header>

        <div class="grid grid-cols-[300px_1fr] gap-x-12 ">
            <div class="flex flex-col">
                <picture class="mb-5 w-full relative">
                    <img 
                    class="aspect-[389/500] w-full h-full object-cover rounded" 
                    src={info.img} 
                    alt={`Portada del libro ${info.title}`}
                    style={`view-transition-name: book-${info.id}`}
                    />
                </picture>

                <a href="#" type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    <svg class="w-3.5 h-3.5 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 21">
                    <path d="M15 12a1 1 0 0 0 .962-.726l2-7A1 1 0 0 0 17 3H3.77L3.175.745A1 1 0 0 0 2.208 0H1a1 1 0 0 0 0 2h.438l.6 2.255v.019l2 7 .746 2.986A3 3 0 1 0 9 17a2.966 2.966 0 0 0-.184-1h2.368c-.118.32-.18.659-.184 1a3 3 0 1 0 3-3H6.78l-.5-2H15Z"/>
                    </svg>
                    Buy now
                </a>
            </div>

            <aside>
                <h1 class="text-4xl  font-black mb-4">{info.title}</h1>
                <p class="text-lg mb-4">{info.opinion}</p>
                <p><strong>Autor:</strong> <span class="font-semibold text-gray-500">{info.author}</span></p>
            </aside>
        </div>

    </main>

</Layout>